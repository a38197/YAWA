<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yawa_provider_debug"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.isel.pdm.yawa.activities.YawaProviderDebug"
    android:orientation="vertical">

    <EditText
        android:text="Lisbon"
        android:id="@+id/yawa_provider_debug_cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Add/Update by network"
                android:onClick="btnCityClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Load from provider"
                android:onClick="btnProviderGetClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Delete from provider"
                android:onClick="btnProviderDeleteClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Get Location"
                android:onClick="btnGetLocationClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="Get Forecast data from network"
                android:onClick="btnGetForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Load Forecast from provider"
                android:onClick="btnLoadForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Delete Forecast data from provider"
                android:onClick="btnDeleteForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Get Cities"
                android:onClick="btnGetCities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>




    <ListView
        android:id="@+id/yawa_provider_debug_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
